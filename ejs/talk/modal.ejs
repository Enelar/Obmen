    <div class="description">
      <div class=''>
      </div>
    </div>
  </div>
  <div class='actions'>
      <div class='ui fluid action input'>
        <input>
        <div class='ui positive button send'>
          <i class='envelope icon'></i>
          <span>Отправить</span>
        </div>
      </div>
