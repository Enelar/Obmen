<%
this.first(function()
{
  this.first()
    .modal
    ({
      onApprove: function()
      {
        return false;
      },
      onHidden: function()
      {
        __context.first().remove();
      }
    }).modal('show');
})

this.DeferCascade(function()
{
  for ($i = 0; $i < 2000; $i+= 200)
    phoxy.Defer(function() {__context.first().modal('refresh')}, $i);
})
%>