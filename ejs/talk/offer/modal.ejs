  <div class='header'>
    Обмен
  </div>
  <div class='content'>
    <div class="description">
      <div class=''>
        Декср <%@ this.adv %>

        <%= this.DeferRender('talk/offer/items', 'cp/profile/MyAdvertisments') %>
      </div>
    </div>
  </div>
  <div class='actions'>
    <div class='ui positive button offer'>
      <span>Предложить</span>
    </div>
  </div>
